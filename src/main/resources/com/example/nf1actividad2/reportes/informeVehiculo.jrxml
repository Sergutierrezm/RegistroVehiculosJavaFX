<?xml version="1.0" encoding="UTF-8"?>
<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports
                                  http://jasperreports.sourceforge.net/xsd/jasperreport.xsd"
              name="informeVehiculo"
              pageWidth="595" pageHeight="842"
              columnWidth="555" leftMargin="20" rightMargin="20"
              topMargin="20" bottomMargin="20"
              uuid="00000000-0000-0000-0000-000000000000">

    <!-- Parámetros -->
    <parameter name="matricula" class="java.lang.String"/>
    <parameter name="marca" class="java.lang.String"/>
    <parameter name="anio" class="java.lang.String"/>
    <parameter name="valor" class="java.lang.String"/>

    <title>
        <band height="200">
            <staticText>
                <reportElement x="200" y="20" width="200" height="30"/>
                <textElement textAlignment="Center">
                    <font size="18" isBold="true"/>
                </textElement>
                <text><![CDATA[Informe del Vehículo]]></text>
            </staticText>

            <textField>
                <reportElement x="50" y="80" width="400" height="20"/>
                <textFieldExpression><![CDATA["Matrícula: " + $P{matricula}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="50" y="110" width="400" height="20"/>
                <textFieldExpression><![CDATA["Marca: " + $P{marca}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="50" y="140" width="400" height="20"/>
                <textFieldExpression><![CDATA["Año: " + $P{anio}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="50" y="170" width="400" height="20"/>
                <textFieldExpression><![CDATA["Valor estimado: " + $P{valor}]]></textFieldExpression>
            </textField>
        </band>
    </title>

    <detail>
        <band height="20"/>
    </detail>
</jasperReport>
