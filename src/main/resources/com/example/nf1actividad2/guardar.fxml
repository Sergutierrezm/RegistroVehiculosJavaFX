<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.nf1actividad2.guardarRegistro">

    <children>
        <!-- Imagen de fondo -->
        <ImageView fitHeight="400" fitWidth="600" layoutX="0" layoutY="0" preserveRatio="false">
            <image>
                <Image url="@images/garaje.jpg" />
            </image>
        </ImageView>

        <!-- Etiquetas y controles encima del fondo -->
        <Label layoutX="14.0" layoutY="21.0" style="-fx-font-size: 18px;" text="Resumen del registro" textFill="WHITE" />

        <Label layoutX="50.0" layoutY="80.0" text="Matrícula:" textFill="WHITE" />
        <Label fx:id="lblMatricula" layoutX="150.0" layoutY="80.0" text="-" textFill="RED" />

        <Label layoutX="50.0" layoutY="120.0" text="Marca:" textFill="WHITE" />
        <Label fx:id="lblMarca" layoutX="150.0" layoutY="120.0" text="-" textFill="RED" />

        <Label layoutX="50.0" layoutY="160.0" text="Año:" textFill="WHITE" />
        <Label fx:id="lblAnio" layoutX="150.0" layoutY="160.0" text="-" textFill="RED" />

        <Label layoutX="50.0" layoutY="200.0" text="Valor:" textFill="WHITE" />
        <Label fx:id="lblValor" layoutX="150.0" layoutY="200.0" text="-" textFill="RED" />

        <CheckBox fx:id="chkConfirmar" layoutX="50.0" layoutY="250.0" text="Acepta términos y condiciones" textFill="WHITE" />

        <Button fx:id="btnGuardar" layoutX="50.0" layoutY="300.0" onAction="#guardarRegistro" text="Guardar" textFill="RED" />
        <Button fx:id="btnSalir" layoutX="150.0" layoutY="300.0" onAction="#salir" text="Salir" />
    </children>
</AnchorPane>
